
upstream kanaloa {
	 server 127.0.0.1:8001;
}

server {
	listen 80;
	server_name _;

	access_log /var/log/nginx/kanaloa_access.log;

	location /kanaloa/testsvc/ {
		proxy_read_timeout 500;
		proxy_buffering off;
		proxy_pass http://kanaloa/;
	}

	location /kanaloa/client/ {
		alias /usr/share/javascript/kanaloa/;
		autoindex on;
	}

	location /kanaloa/test/ {
		alias /usr/share/kanaloa/0.01/test/;
		autoindex on;
	}

	location /kanaloa/doc/ {
		alias /usr/share/doc/kanaloa/html/;
		index index.html index.htm;
		autoindex on;
	}
}
